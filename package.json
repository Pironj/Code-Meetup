{
  "name": "mern",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node server/scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "fix-server": "eslint --fix server/**",
    "fix-client": "cd client && npm run fix",
    "fix-all": "eslint --fix server/** && cd client && npm run fix",
    "test": "mocha ./server/test --timeout 15000 --exit",
    "watch": "nodemon server.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.18.7",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@syncfusion/ej2-react-calendars": "^17.2.36",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.3.3",
    "dotenv": "^8.0.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mdbreact": "^4.18.0",
    "mongo": "^0.1.0",
    "mongoose": "^5.6.6",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "react-google-login": "^5.0.4",
    "sudo": "^1.0.3"
  }
}
